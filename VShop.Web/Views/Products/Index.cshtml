@model IEnumerable<VShop.Web.Models.ProductViewModel>

<h2>Produtos</h2>
<hr />

<div class="row">
    <div class="col-md-12">
        <div>
            <div class="pull-left">
                <a asp-action="CreateProduct" asp-controller="Products" class="btn btn-primary">
                    <span title="Add Produto" class="fas fa-plus">Novo Produto</span>
                </a>
            </div>
        </div>
    </div>
</div>
<br />
<div class="panel panel-default">
    @if (Model.Any())
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(m => m.Nome)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.CategoryName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.Description)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.Price )
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(i => item.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(i => item.CategoryName)
                        </td>
                        <td>
                            @Html.DisplayFor(i => item.Description)
                        </td>
                        <td>
                            @Html.DisplayFor(i => item.Price)
                        </td>
                        <td>
                            <a asp-action="UpdateProduct" asp-route-id="@item.Id" title="Edita" class="btn btn-secondary">
                                <span class="fas fa-edit"></span>
                            </a>
                            <a asp-action="DeleteProduct" asp-route-id="@item.Id" title="Deleta" class="btn btn-secondary">
                                <span class="fas fa-trash-alt"></span>
                            </a>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else{
        <div role="alert" clas="alert alert-info" aria-hidden="true" >
            Nenhum dado encontrado.
        </div>
    }
</div>